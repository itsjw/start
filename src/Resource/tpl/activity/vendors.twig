<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <base href="/">
    <title>Vendors activity</title>

    <link href="{{ param('perfumerlabs.start/static') }}/vendor/bulma/css/bulma.css" rel='stylesheet' type='text/css'>
    <link href="{{ param('perfumerlabs.start/static') }}/css/activity/vendors.css" rel='stylesheet' type='text/css'>

    <style>
        [v-cloak] { display: none !important; }
    </style>
</head>

<body>
<div id="vendors" class="columns" v-cloak>
    <div class="column">
        <nav class="breadcrumb is-large">
            <ul>
                <li><a @click="cancelForm()">Список вендоров</a></li>
                <li><a @click="creating = true">Создать вендора</a></li>
            </ul>
        </nav>

        <table class="table is-striped is-fullwidth" v-if="!creating">
            <thead>
            <tr>
                <th></th>
                <th>Название</th>
                <th>Хост</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <tr v-for="(vendor, index) in vendors">
                <td>{{ '{{ index + 1 }}' }}</td>
                <td class="name" @click="editVendor(vendor)">{{ '{{ vendor.name }}' }}</td>
                <td class="name" @click="editVendor(vendor)">{{ '{{ vendor.hostname }}' }}</td>
                <td><a class="button is-text is-pulled-right" @click="deleteVendor(vendor)">Удалить</a></td>
            </tr>
            <tr v-if="vendors.length == 0">
                <td colspan="4">Создайте вендора</td>
            </tr>
            </tbody>
        </table>

        <div id="form" v-if="creating">
            <div class="field">
                <label class="label">Название</label>
                <div class="control">
                    <input class="input" type="text" v-model="form.name">
                </div>
            </div>

            <div class="field">
                <label class="label">Хост</label>
                <div class="control">
                    <input class="input" type="text" v-model="form.hostname">
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link" @click="saveForm()">Сохранить</button>
                </div>
                <div class="control">
                    <button class="button is-text" @click="cancelForm()">Отмена</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/vue"></script>
<script src="https://cdn.jsdelivr.net/npm/vue-resource@1.3.4"></script>
<script src="{{ param('perfumerlabs.start/static') }}/js/activity/vendors.js"></script>
</body>
</html>
