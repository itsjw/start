<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <base href="/">
    <title>Start</title>
    <script src="http://static.start.dev/start/js/requirejs.min.js"></script>
    <script>
        requirejs.config({
            paths: {
                "text" : "http://static.start.dev/start/vendor/requirejs-text/text",
                "css" : "http://static.start.dev/start/vendor/require-css/css.min"
            }
        });

        requirejs(['http://static.start.dev/start/js/start.js'], function (Start) {
            Start.run();
        });
    </script>
    <style>
        .fragment { border: 1px solid #cccccc; border-radius: 5px; margin-bottom: 10px; padding: 10px; cursor: pointer }
    </style>
</head>

<body>
<div id="main" style="width: 1200px; margin: 0 auto">
    <div id="fragments" style="width: 600px; float: left">
        {% for fragment in fragments %}
            <div class="fragment" data-id="{{ fragment.id }}">
                <div><span style="color: #cccccc">Для кого:</span> {{ fragment.user.username }}</div>
                <div><span style="color: #cccccc">Создано:</span> {{ fragment.createdAt('d.m.Y H:i:s') }}</div>
            </div>
        {% endfor %}
    </div>

    <div id="task" style="width: 600px; float: right">
        <div id="wrapper" style="padding: 0 10px">
        </div>
    </div>

    <div style="clear: both"></div>
</div>
</body>
</html>
